{% extends 'base.html.twig' %}

{% block title %}{{ app.user.firstName }} {{ app.user.lastName }}{% endblock %}

{% block body %}
    <main class="container-profile offset-3">
        <div class="row">
            <div class="col-md-4">
                <img src="img/user/{{ app.user.imageName }}" alt="{{ app.user.firstName }} {{ app.user.lastName }}">
            </div>
            <div class="info col-md-8">
                <h2>{{ app.user.firstName }} {{ app.user.lastName }}</h2>
                <p>Votre Email: {{ app.user.email }}</p>
                <p>Création du compte: {{ app.user.createdAt|date('d/m/Y') }}</p>
                <p>Mise à jour du compte: {{ app.user.updatedAt|date('d/m/Y') }}<p>
                <p>Status:
                    {% for role in app.user.roles %}
                        {{ role | capitalize | replace({'_': ' '}) }}
                    {% endfor %}
                </p>
                <div class="my-3">
                    <a href="{{ path('app_edit_profile') }}" class="btn btn-dark">Modifier mon profil</a>
                    <a href="{{ path('app_edit_profile') }}" class="btn btn-dark">Modifier mon mot de passe</a>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
